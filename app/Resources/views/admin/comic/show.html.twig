{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comic</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comic.id }}</td>
            </tr>
            <tr>
                <th>Issuenumber</th>
                <td>{{ comic.issueNumber }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ comic.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ comic.description }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ comic.volume }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ comic.cover }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('admin_comic_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_comic_edit', { 'id': comic.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
